@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model M12_HW.Models.Role
@{
    Layout = "_Layout";
    ViewData["Title"] = "Create Role";
}

<h2>Create Role Page</h2>
<a class="btn btn-dark"
   asp-controller="Home"
   asp-action="Index">Home</a>
<div class="row">
    <div class="col-4"></div>
    <div class="col-4">
        <form class="border"
              asp-controller="User"
              asp-action="CreateRole"
              method="post">
            <label asp-for="RoleName" class="form-label">Role name:</label>
            <input type="text" class="form-control" name="RoleName" required />
            <button type="submit" class="btn btn-success">Create Role</button>
        </form>
    </div>
    <div class="col-4"></div>
</div>